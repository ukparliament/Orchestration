{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "logicAppsSetting_name": {
            "type": "array",
            "metadata": {
                "description": "Names for Service Bus queues."
            }
        },
        "serviceBusName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Service Bus."
            }
        },
        "releaseId": {
            "type": "int",
            "metadata": {
                "description": "The identifier of the current release record."
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "comments": "Service Bus queue.",
            "type": "Microsoft.ServiceBus/namespaces/queues",
            "copy": {
                "name": "queuecopy",
                "count": "[length(parameters('logicAppsSetting_name'))]"
            },
            "name": "[concat(parameters('serviceBusName'),'/',parameters('logicAppsSetting_name')[copyIndex()])]",
            "apiVersion": "2015-08-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "ReleaseId": "[parameters('releaseId')]"
            },
            "properties": {
                "maxSizeInMegabytes": 1024,
                "requiresDuplicateDetection": false,
                "requiresSession": false,
                "defaultMessageTimeToLive": "7.00:00:00",
                "deadLetteringOnMessageExpiration": false,
                "enableBatchedOperations": true,
                "isAnonymousAccessible": false,
                "supportOrdering": false,
                "enablePartitioning": true,
                "enableExpress": false
            },
            "resources": [],
            "dependsOn": []
        }
    ]
}