{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "base64Settings": {
      "type": "string",
      "metadata": {
        "description": "Base64 (UTF-8) encoded array of settings."
      }
    },
    "azureFunctionsName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Azure Functions."
      }
    },    
    "releaseId": {
      "type": "int",
      "metadata": {
        "description": "The identifier of the current release record."
      }
    }
  },
  "variables": {
    "schedulerName": "scheduler",
    "logicAppsSettings": "[base64ToJson(parameters('base64Settings'))]"
  },
  "resources": [
    {
      "comments": "Scheduler Job.",
      "type": "Microsoft.Scheduler/jobCollections/jobs",
      "copy": {
        "name": "jobcopy",
        "count": "[length(variables('logicAppsSettings'))]"
      },
      "name": "[concat(variables('schedulerName'),'/',variables('logicAppsSettings')[copyIndex()].name)]",
      "apiVersion": "2016-03-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "ReleaseId": "[parameters('releaseId')]"
      },
      "properties": {
        "startTime": "[variables('logicAppsSettings')[copyIndex()].triggerTime]",
        "action": {
          "request": {
            "uri": "[listCallbackURL(concat(resourceId('Microsoft.Logic/workflows',concat('getlist-',variables('logicAppsSettings')[copyIndex()].name)),'/triggers/manual'),'2016-06-01').value]",
            "method": "POST"
          },
          "type": "HTTP",
          "retryPolicy": {
            "retryType": "none"
          }
        },
        "recurrence": {
          "frequency": "[variables('logicAppsSettings')[copyIndex()].frequency]",
          "interval": "[variables('logicAppsSettings')[copyIndex()].interval]"
        },
        "state": "Enabled"
      },
      "resources": [],
      "dependsOn": []
    },
    {
      "comments": "Scheduler Job.",
      "type": "Microsoft.Scheduler/jobCollections/jobs",
      "name": "[concat(variables('schedulerName'),'/graphdbbackup')]",
      "apiVersion": "2016-03-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "ReleaseId": "[parameters('releaseId')]"
      },
      "properties": {
        "startTime": "05:00",
        "action": {
          "request": {
            "uri": "[listsecrets(concat(resourceId('Microsoft.Web/sites',parameters('azureFunctionsName')),'/functions/GraphDBBackup'),'2015-08-01').trigger_url]",
            "method": "POST"
          },
          "type": "Https",
          "retryPolicy": {
            "retryType": "None"
          }
        },
        "recurrence": {
          "frequency": "Hour",
          "interval": 24
        },
        "state": "Enabled"
      },
      "resources": [],
      "dependsOn": [
      ]
    }
  ]
}